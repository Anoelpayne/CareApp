@model List<CareApp.Models.ATask>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Tasks" asp-action="AddTask">Add Task</a>
</p>


@if (Model.Count == 0)
{
    <p>No tasks yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
        </tr>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>

            </tr>
        }
    </table>
}
